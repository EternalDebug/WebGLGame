<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Game</title>
    <link rel="stylesheet" href="~/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">Game</a>
                <div class="navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Scenes/Scene1">Scene1</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Scenes/Scene2">Scene2</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Scenes/Scene3">Scene3</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Scenes/Scene4">Scene4</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>

</body>
</html>
